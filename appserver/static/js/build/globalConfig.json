{
    "meta": {
        "name": "git_for_splunk",
        "displayName": "Git for Splunk",
        "version": "1.0.0",
        "apiVersion": "3.0.0",
        "restRoot": "git_for_splunk"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                }
            ]
        },
        "inputs": {
            "title": "Inputs",
            "description": "Manage your data inputs",
            "table": {
                "header": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    }
                ],
                "moreInfo": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    },
                    {
                        "field": "working_directory",
                        "label": "Working directory"
                    },
                    {
                        "field": "repository_directory",
                        "label": "Repository directory"
                    },
                    {
                        "field": "include_btool_output",
                        "label": "Include Btool output"
                    },
                    {
                        "field": "btool_conf_files",
                        "label": "Btool .conf files"
                    },
                    {
                        "field": "remote_push",
                        "label": "Push to remote repository"
                    }
                ],
                "actions": [
                    "edit",
                    "enable",
                    "delete",
                    "clone"
                ]
            },
            "services": [
                {
                    "name": "gitforsplunk",
                    "title": "Git for Splunk",
                    "entity": [
                        {
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Enter a unique name for the data input",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                },
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 100,
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ]
                        },
                        {
                            "field": "interval",
                            "label": "Interval",
                            "type": "text",
                            "required": true,
                            "help": "Time interval of input in seconds.",
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$",
                                    "errorMsg": "Interval must be an integer."
                                }
                            ]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "blackList": "^_.*$",
                                "createSearchChoice": true
                            },
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 80,
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ]
                        },
                        {
                            "field": "working_directory",
                            "label": "Working directory",
                            "help": "This is the path which will be tracked for changes. Relative to SPLUNK_HOME or an absolute path\n",
                            "required": true,
                            "type": "text",
                            "defaultValue": "etc/",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "repository_directory",
                            "label": "Repository directory",
                            "help": "The path where the git repository will be stored. Relative to the working directory or an absolute path.",
                            "required": true,
                            "type": "text",
                            "defaultValue": ".git/",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "include_btool_output",
                            "label": "Include Btool output",
                            "help": "Btool output will be saved to files to track the layered Splunk configuration",
                            "required": false,
                            "type": "checkbox",
                            "defaultValue": true
                        },
                        {
                            "field": "btool_conf_files",
                            "label": "Btool .conf files",
                            "help": "Comma separated list of .conf files which should be tracked for changes using Btool.",
                            "required": false,
                            "type": "text",
                            "defaultValue": "inputs, indexes, fields, props, limits, outputs, props, transforms, savedsearches, macros",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ]
                        },
                        {
                            "field": "remote_push",
                            "label": "Push to remote repository",
                            "help": "Push changes to the remote repository on each run",
                            "required": false,
                            "type": "checkbox",
                            "defaultValue": true
                        }
                    ]
                }
            ]
        }
    }
}